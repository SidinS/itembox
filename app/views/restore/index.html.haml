- title t('links.deleted')
%table#main-table.table.table-striped.tablesorter
  = t('table.titles.last_month')
  %tbody
    %tr
      %td= t('table.titles.name')
      %td= t('table.titles.modified')
      %td= t('table.titles.size')
      %td= t('table.titles.actions')
    - @items.each do |item|
      %tr.items
        %td
          %i.icon-file
          = link_to item.filename, folder_item_path(current_folder, item)
        %td= humanize_date_in_time_zone(item.deleted_at)
        %td= number_to_human_size(item.size)
        %td= link_to ApplicationHelper::BLANK_LINK, restore_path(item), method: :put, class: 'icon-leaf', title: 'Restore'
