- title t('.sign_up', default: 'Sign up')

= stylesheet_link_tag 'bootstrap_and_overrides', media: 'all'
= stylesheet_link_tag 'sessions', media: 'all'
= javascript_include_tag 'application'

- if devise_error_messages!.present? || flash[:alert].present?
  .row
    .span11.offset1
      .alert.alert-error
        %button.close{"data-dismiss" => "alert", :type => "button"} Ã—
        = devise_error_messages!
        = flash[:alert]
.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f|
    %h2.form-signin-heading= t('.sign_up', default: 'Sign up')
    = f.email_field :email, autofocus: true, class: 'input-block-level',
      placeholder: t('activerecord.attributes.user.email')
    = f.password_field :password, autocomplete: 'off', class: 'input-block-level',
      placeholder: t('activerecord.attributes.user.password')
    = f.password_field :password_confirmation, autocomplete: 'off', class: 'input-block-level',
      placeholder: t('activerecord.attributes.user.password_confirmation')
    = f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-large btn-primary'
    %p.text-right= render 'devise/shared/links'
    %p
